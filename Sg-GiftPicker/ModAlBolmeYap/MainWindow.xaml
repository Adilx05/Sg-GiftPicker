        <Button Content="PICK GIFT" HorizontalAlignment="Left" Margin="257,75,0,0" VerticalAlignment="Top" Width="75" Name="Action_Bt" Click="Action_Bt_OnClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="62" Width="141" Name="Sonuc_Tb"/>
