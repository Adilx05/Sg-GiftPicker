        <TextBlock HorizontalAlignment="Left" Margin="10,62,0,0" TextWrapping="Wrap" Text="Gift Number :" VerticalAlignment="Top"/>
        <CheckBox Content="Copy Link" HorizontalAlignment="Left" Margin="257,110,0,0" VerticalAlignment="Top" Name="Copy_Cb" IsChecked="True"/>
        <CheckBox Content="Available" HorizontalAlignment="Left" Margin="257,133,0,0" VerticalAlignment="Top" Name="Available_Cb" IsChecked="True"/>

    </Grid>
</mah:MetroWindow>

